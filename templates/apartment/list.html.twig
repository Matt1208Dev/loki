{% extends "base.html.twig" %}

{% block title %}
	Liste des appartements
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('apartment_list')}}">Appartements</a>
		</li>
	</ol>

	<h1 class="mb-3">Tous les appartements</h1>

	<div class="row">
		<div class="col-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Propri√©taire</th>
						<th scope="col">Adresse</th>
						<th scope="col">Code postal</th>
						<th scope="col">Ville</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for apartment in apartments %}
						<tr class="table-primary">
							<td scope="row">{{apartment.id}}</td>
							<td>
								<a href="{{urlGenerator.generate('owner_show', {'id': apartment.owner.id})}}">{{apartment.owner.lastName}}
									{{apartment.owner.firstName}}</a>
							</td>
							<td>{{apartment.street}}</td>
							<td>{{apartment.zip}}</td>
							<td>{{apartment.city}}</td>
							<td><a class="text-info text-decoration-none" href="{{urlGenerator.generate('apartment_edit', {'id': apartment.id})}}">Editer <i class="fa-solid fa-pen-to-square"></i></a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<a href="{{urlGenerator.generate('apartment_create')}}" class="btn btn-success mb-3">Ajouter un nouvel appartement</a>
{% endblock %}
