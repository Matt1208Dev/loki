{% extends "base.html.twig" %}

{% block title %}
	Edition d'une fiche Appartement
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('apartment_list')}}">Appartement</a>
		</li>
		<li class="breadcrumb-item active">Edition</li>
	</ol>

	<h1 class="mb-4">Editer les informations de l'appartement {{apartment.id}}</h1>

	{# {{ form (formView)}} #}

	{{ form_start(formView)}}

	{{ form_errors(formView)}}

	{# {{ form_widget(formView)}} #}
	<div class="row">
		<div class="col">
			{{ form_row(formView.owner)}}
			{{ form_row(formView.street)}}
			{{ form_row(formView.zip)}}
			{{ form_row(formView.city)}}
			{{ form_row(formView.comment)}}
		</div>
	</div>

	<a href="{{urlGenerator.generate('apartment_list')}}" class="btn btn-primary"><i class="fa-regular fa-arrow-left"></i> Retour</a>
	<button type="submit" class="btn btn-success">Enregistrer <i class="fa-solid fa-floppy-disk"></i></button>
	<a href="{{urlGenerator.generate('apartment_retire', {'id': apartment.id})}}" class="btn btn-outline-danger border-danger">Archiver <i class="fa-solid fa-box-archive"></i></a>

	{{ form_end(formView)}}
{% endblock %}