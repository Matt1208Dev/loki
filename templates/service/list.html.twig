{% extends "base.html.twig" %}

{% block title %}
	Liste des services
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('service_list')}}">Services</a>
		</li>
	</ol>

	<h1 class="mb-3">Tous les Services</h1>

	<div class="row justify-content-center">
		<div class="col-md-10">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Libellé</th>
						<th scope="col">Tarif</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for service in services %}
						<tr class="table-primary">
							<td class="col-1" scope="row">{{service.id}}</td>
							<td class="col-5" scope="row">{{service.label}}</td>
							<td class="col-2" scope="row">{{service.price}}</td>
							<td class="col-2">
								<a class="text-decoration-none" href="{{urlGenerator.generate('service_edit', {'id': service.id})}}">Editer
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
							</td>
							<td class="col-2">
								<a class="text-decoration-none" href="{{urlGenerator.generate('cart_add', {'id': service.id})}}">Ajouter
									<i class="fa-solid fa-cart-plus fs-5 align-middle"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a href="{{urlGenerator.generate('service_create')}}" class="btn btn-outline-primary mb-3">Créer un service</a>
		</div>
	</div>

{% endblock %}
