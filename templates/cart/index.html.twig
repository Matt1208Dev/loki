{% extends 'base.html.twig' %}

{% block title %}Panier de services
{% endblock %}

{% block body %}

{% if items | length > 0 %}
	<table class="table">
		<thead>
			<tr>
				<th>Service</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr class="table-primary align-middle">
					<td>{{ item.service.label }}</td>
					<td>{{ item.service.price|format_currency('EUR', locale='fr') }}</td>
					<td>
						<a href="{{ path('cart_decrement', {"id":item.service.id}) }}" class="btn btn-sm btn-outline-dark me-2">
							<i class="fas fa-minus"></i>
						</a>
						{{ item.qty }}
						<a href="{{ path('cart_add', {"id":item.service.id}) }}?returnToCart=true" class="btn btn-sm btn-outline-dark ms-2">
							<i class="fas fa-plus"></i>
						</a>
					</td>
					<td>{{ (item.total)|format_currency('EUR', locale='fr') }}</td>
					<td>
						<a class="btn btn-sm btn-danger" href="{{ path('cart_delete', {"id": item.service.id}) }}">
							<i class="fas fa-trash" title="Supprimer la ligne"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr class="table-light text-dark fw-bold fs-6">
				<td colspan="3">Total :
				</td>
				<td colspan="2">{{ total|format_currency('EUR', locale='fr') }}</td>
			</tr>
		</tfoot>
	</table>
{% else %}
    <h2>Le panier est vide !</h2>
{% endif %}

{% endblock %}
