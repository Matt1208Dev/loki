{% extends "base.html.twig" %}

{# {% form_theme formView 'bootstrap_5_layout.html.twig' %} #}

{% block title %}
	Création d'une fiche propriétaire
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('owner_list')}}">Propriétaires</a>
		</li>
		<li class="breadcrumb-item active">Ajout</li>
	</ol>

	<h1 class="mb-4">Ajouter un nouveau propriétaire</h1>

	{# {{ form (formView)}} #}

	{{ form_start(formView)}}

	{{ form_errors(formView)}}

	{# {{ form_widget(formView)}} #}
	<div class="row">
		<div class="col">
			{{ form_row(formView.lastName)}}
			{{ form_row(formView.firstName)}}
			{{ form_row(formView.street)}}
			{{ form_row(formView.zip)}}
		</div>
		<div class="col">
			{{ form_row(formView.city)}}
			{{ form_row(formView.phone)}}
			{{ form_row(formView.mail)}}
			{{ form_row(formView.comment)}}
		</div>
	</div>

	<a href="{{urlGenerator.generate('owner_list')}}" class="btn btn-primary">Retour</a>
	<button type="submit" class="btn btn-success">Créer</button>

	{{ form_end(formView)}}
{% endblock %}

{% block form_row %}

	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form, {'attr': {'class' : 'form-control'} }) }}
		{{ form_help(form) }}
		{{ form_errors(form) }}
	</div>
{% endblock %}
